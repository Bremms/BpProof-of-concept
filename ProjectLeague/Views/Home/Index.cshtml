@model ProjectLeague.ViewModels.CreateGroup
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Project League</h1>
    <p class="lead">Project League is an application to view your match live with your friends!</p>
    <p><a href="@Url.Action("Index","Group")" class="btn btn-primary btn-lg">Search for groups &raquo;</a></p>
</div>
@if (TempData["error"] != null)
{
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        @TempData["error"]
    </div>
}
@using (Html.BeginForm())
{
<div class="row" id="createGroup">
    <div class="col-md-12">
        <div id="cent">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Groupname, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter a new groupname" } })
                    @Html.ValidationMessageFor(model => model.Groupname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
</div>
}