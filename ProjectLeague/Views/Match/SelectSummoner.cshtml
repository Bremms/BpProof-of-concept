@model ProjectLeague.ViewModels.SelectSummoner
@{
    ViewBag.Title = "Home Page";
}
<h2>Select a Summoner</h2>
@using (Html.BeginForm())
{
<div class="row" id="createGroup">
    <div class="col-md-12">
        <div id="cent">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SummonerName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter a summoner" } })
                    @Html.ValidationMessageFor(model => model.SummonerName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" id="userButton" />
                </div>
            </div>
        </div>
    </div>
</div>
}